@model Ignis.Models.VehicleRepair

@{
    ViewBag.Title = "CloseTicket";
}

<h2>CloseTicket</h2>

<h4>Vehicle Damage</h4>
@{Html.RenderAction("ViewVehicleDamage", new { id = Model.VehicleDamage.Id });}
<hr />

<div class="row">
    <h4>Vehicle Details</h4>
    @{Html.RenderAction("ViewVehicle", new { id = Model.VehicleDamage.VehicleId });}
</div>
<hr />

<div class="row">
    <h4>Vehicle Damage History</h4>
    @{Html.RenderAction("ViewPreviousDamages", new { vehicleId = Model.VehicleDamage.VehicleId, vehicleDamageTypeId = Model.VehicleDamage.VehicleDamageTypeId });}
</div>
<hr />

<div class="row">
    @using (Html.BeginForm("CloseTicket", "VehicleDamage", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>VehicleRepair</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                @Html.LabelFor(model => model.BillTIN, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BillTIN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BillTIN, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Cost, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AgencyName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AgencyName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AgencyName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AgencyContact, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AgencyContact, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AgencyContact, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Photo North", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="image[0]" />
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Photo South", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="image[1]" />
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Photo East", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="image[2]" />
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Photo West", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="image[3]" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Close" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</div>
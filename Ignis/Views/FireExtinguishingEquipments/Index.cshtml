@model IEnumerable<Ignis.Models.FireExtinguishingEquipment>

@{
    ViewBag.Title = "Index";
}

<h2>Fire Extinguishing Equipments</h2>

<p>
    @Html.ActionLink("Add more equipment to the fleet", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FireExtinguishingEquipmentType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FireStation.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateofPurchase)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FireExtinguishingEquipmentType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FireStation.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateofPurchase)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>

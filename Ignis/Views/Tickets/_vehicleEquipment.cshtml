@model Ignis.Models.VehicleEquipment

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Vehicle.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vehicle.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VehicleEquipmentType.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VehicleEquipmentType.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateofPurchase)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateofPurchase)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

    </dl>
</div>
<div class="row">
    @if (TempData.Keys.Contains("VehicleEquipmentImages"))
    {
        <div class="row">
            @foreach (Ignis.Models.ImageViewModel image in (List<Ignis.Models.ImageViewModel>)TempData["VehicleEquipmentImages"])
            {
                <div class="col-md-3">
                    <div class="thumbnail">
                        <a href="@Url.Content(Ignis.Util.Constants.VEHICLE_EQUIPMENTS_UPLOAD_BASE_PATH + image.FilePath)" target="_blank">
                            <img src="@Url.Content(Ignis.Util.Constants.VEHICLE_EQUIPMENTS_UPLOAD_BASE_PATH + image.FilePath)" alt="" style="width:100%" />
                            <div class="caption">
                                <p>@image.Description</p>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>